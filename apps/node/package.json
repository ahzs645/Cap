{
  "name": "@cap/recording",
  "version": "0.1.0",
  "description": "Headless screen recording library powered by Cap",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node test.js",
    "examples": "node examples.js"
  },
  "keywords": ["screen-recording", "video", "capture", "headless", "cap"],
  "author": "Cap Software",
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "engines": {
    "node": ">= 16"
  },
  "os": ["darwin", "linux", "win32"],
  "napi": {
    "name": "cap-node",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ]
}
